<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBack"
    tools:context="com.example.luis.appprueba.NewEventActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:text="Cancel"
        android:onClick="cancelbutton1"
        android:id="@+id/botoncancelar"
        android:background="@color/colorPrimary"


        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:onClick="enviarbutton1"
        android:background="@color/colorPrimary"
        android:text="Send"
        android:id="@+id/botonenviar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/blanco"
        android:hint="Country food"
        android:ems="10"
        android:id="@+id/editTextCountryFood"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/botoncancelar"
        android:layout_toEndOf="@+id/botoncancelar"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textColorHint="@color/blanco"
        android:hint="Date"
        android:ems="10"
        android:id="@+id/editTextDate"
        android:layout_below="@+id/editTextCountryFood"
        android:layout_toRightOf="@+id/botoncancelar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/blanco"
        android:hint="Country"
        android:ems="10"
        android:id="@+id/editTextCountryEvent"
        android:layout_below="@+id/editTextDate"
        android:layout_toRightOf="@+id/botoncancelar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/blanco"
        android:hint="City"
        android:ems="10"
        android:id="@+id/editTextCity"
        android:layout_below="@+id/editTextCountryEvent"
        android:layout_toRightOf="@+id/botoncancelar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/blanco"
        android:hint="Address"
        android:ems="10"
        android:id="@+id/editTextAddress"
        android:layout_below="@+id/editTextCity"
        android:layout_toRightOf="@+id/botoncancelar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColorHint="@color/blanco"
        android:hint="Number of participants"
        android:ems="10"
        android:id="@+id/editTextNumberParticipants"
        android:layout_toRightOf="@+id/botoncancelar"
        android:layout_below="@+id/editTextAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/blanco"
        android:hint="Description"
        android:ems="10"
        android:id="@+id/editTextDescription"
        android:layout_below="@+id/editTextNumberParticipants"
        android:layout_toRightOf="@+id/botoncancelar"
        android:layout_toEndOf="@+id/botoncancelar" />

</RelativeLayout>
